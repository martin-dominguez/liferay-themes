<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.2.0+</version>
	</compatibility>
	<theme id="intranet" name="Intranet">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="show-footer" type="checkbox" value="true"/>
			<setting configurable="true" key="show-footer" type="checkbox" value="true"/>
			<setting configurable="true" key="show-footer-company-navigation" type="checkbox" value="true"/>
			<setting configurable="true" key="show-footer-support-navigation" type="checkbox" value="true"/>
			<setting configurable="true" key="show-social-icons" type="checkbox" value="true"/>
			<setting configurable="true" key="twitter-url" type="text" value=""/>
			<setting configurable="true" key="facebook-url" type="text" value=""/>
			<setting configurable="true" key="instagram-url" type="text" value=""/>
			<setting configurable="true" key="linkedin-url" type="text" value=""/>
			<setting configurable="true" key="location" type="text" value=""/>
			<setting configurable="true" key="email" type="text" value=""/>
			<setting configurable="true" key="phone" type="text" value=""/>
			<setting configurable="true" key="company-description" type="text" value="Quis ipsum suspendisse ultrices gravida commodo. Risus commodo veliliee vel viverra maecenas accumsan lacus vel facilisis
"/>
		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
